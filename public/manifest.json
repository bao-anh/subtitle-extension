{
  "name": "Video subtitle",
  "description": "Extension for showing subtitle",
  "version": "1.0",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Turn on subtitle"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "optional_permissions": [
    "<all_urls>"
  ],
  "icons":{
    "512": "subtitle.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["./static/js/content.js"],
      "all_frames": false,
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": ["background.js"]
  }
}
